<label for="Sign up"> <h3> New to Chitter? Sign up! </h3><br>
<form action="/welcome" method="post">
  Name:      <input type="text" name="name"> <br>
  Username:  <input type="text" name="username"> <br>
  E-mail:    <input type="text" name="email"> <br>
  Password:  <input type="text" name="password"> <br>
             <input type="submit" value="Sign up">
</form>
</label>

<label for="Log in"> <h3> Already have an account? Log in! </h3><br>
<form action="/welcome" method="post">
  Username: <input type="text" name="returning_username"> <br>
  Password: <input type="text" name="returning_password"> <br>
            <input type="submit" value="Log in">
</form>
</label>
